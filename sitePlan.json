  "pages": {
    "home": {
      "seo": {
        "title": "DriveRate Auto Loans — Competitive Car Financing",
        "metaDescription": "Discover competitive auto loan rates with DriveRate. Simple applications, transparent terms, and financing options for new and used vehicles."
      },
      "componentOrder": [
        "heroSection",
        "benefitsOverview",
        "howItWorks",
        "loanTypesPreview",
        "testimonialHighlight",
        "ctaBanner"
      ],
      "componentDefinitions": {
        "heroSection": {
          "purpose": "A clean, impactful hero section that immediately communicates the core value proposition and directs visitors to take action.",
          "dataSchema": {
            "type": "object",
            "properties": {
              "headline": {
                "type": "string",
                "description": "Bold primary headline, max 10 words, about getting a great car loan"
              },
              "subheadline": {
                "type": "string",
                "description": "One supporting sentence expanding on the headline, about 15-25 words"
              },
              "ctaButtonLabel": {
                "type": "string",
                "description": "Primary call-to-action button text, e.g. 'Get Your Quote'"
              },
              "ctaButtonUrl": {
                "type": "string",
                "description": "URL for the CTA button, must be /contact"
              },
              "secondaryCtaLabel": {
                "type": "string",
                "description": "Secondary link text, e.g. 'Learn More'"
              },
              "secondaryCtaUrl": {
                "type": "string",
                "description": "URL for the secondary link, must be /about"
              }
            },
            "required": [
              "headline",
              "subheadline",
              "ctaButtonLabel",
              "ctaButtonUrl",
              "secondaryCtaLabel",
              "secondaryCtaUrl"
            ]
          }
        },
        "benefitsOverview": {
          "purpose": "Showcases three key benefits of using DriveRate in a sparse, card-based layout to build immediate trust.",
          "dataSchema": {
            "type": "object",
            "properties": {
              "sectionTitle": {
                "type": "string",
                "description": "Short section heading, e.g. 'Why Choose DriveRate'"
              },
              "benefits": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "iconName": {
                      "type": "string",
                      "description": "Icon identifier, e.g. 'shield', 'clock', 'percent'"
                    },
                    "title": {
                      "type": "string",
                      "description": "Benefit title, 3-5 words"
                    },
                    "description": {
                      "type": "string",
                      "description": "Benefit description, 1-2 concise sentences"
                    }
                  },
                  "required": [
                    "iconName",
                    "title",
                    "description"
                  ]
                }
              }
            },
            "required": [
              "sectionTitle",
              "benefits"
            ]
          }
        },
        "howItWorks": {
          "purpose": "A simple three-step process section that demystifies the car loan application journey for visitors.",
          "dataSchema": {
            "type": "object",
            "properties": {
              "sectionTitle": {
                "type": "string",
                "description": "Heading for the process section, e.g. 'How It Works'"
              },
              "sectionSubtitle": {
                "type": "string",
                "description": "Brief subtitle explaining the simplicity of the process"
              },
              "steps": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "stepNumber": {
                      "type": "string",
                      "description": "Step number, e.g. '01', '02', '03'"
                    },
                    "title": {
                      "type": "string",
                      "description": "Step title, 3-5 words"
                    },
                    "description": {
                      "type": "string",
                      "description": "Step description, 1-2 sentences"
                    }
                  },
                  "required": [
                    "stepNumber",
                    "title",
                    "description"
                  ]
                }
              }
            },
            "required": [
              "sectionTitle",
              "sectionSubtitle",
              "steps"
            ]
          }
        },
        "loanTypesPreview": {
          "purpose": "Highlights the different types of auto loans available (new, used, refinance) with brief descriptions.",
          "dataSchema": {
            "type": "object",
            "properties": {
              "sectionTitle": {
                "type": "string",
                "description": "Heading, e.g. 'Financing Options'"
              },
              "sectionSubtitle": {
                "type": "string",
                "description": "Short supporting sentence about the range of loan types"
              },
              "loanTypes": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "iconName": {
                      "type": "string",
                      "description": "Icon identifier, e.g. 'car', 'refresh', 'key'"
                    },
                    "title": {
                      "type": "string",
                      "description": "Loan type name, e.g. 'New Car Loans'"
                    },
                    "description": {
                      "type": "string",
                      "description": "Brief description of this loan type, 1-2 sentences"
                    }
